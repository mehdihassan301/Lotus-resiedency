{
  "cleanUrls": true,
  "trailingSlash": false,

  "rewrites": [
    { "source": "/(.*)", "destination": "/$1.html" }
  ],

  "redirects": [
    {
      "source": "http://beachviewstays.pk/:path*",
      "destination": "https://beachviewstays.pk/:path*",
      "permanent": true
    },
    {
      "source": "https://www.beachviewstays.pk/:path*",
      "destination": "https://beachviewstays.pk/:path*",
      "permanent": true
    },
    {
      "source": "/index.html",
      "destination": "/",
      "permanent": true
    }
  ],

  "headers": [
    {
      "source": "/sitemap.xml",
      "headers": [
        { "key": "Content-Type", "value": "application/xml" }
      ]
    },
    {
      "source": "/robots.txt",
      "headers": [
        { "key": "Content-Type", "value": "text/plain" }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Robots-Tag", "value": "index, follow" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" }
      ]
    }
  ]
}
